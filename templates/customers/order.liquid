<!-- /templates/customers/order.liquid -->
<div class="container my-5">
    <h1 class="lead">Order {{ order.name }}</h1>

    <div class="row my-5">
        <div class="col-12 col-md-4">
            <div class="card mb-5">
                <div class="card-header"><h6 class="p-1 m-0">Billing Information</h6></div>
                <div class="card-body">
                    <p class="mt-2">Billing status: <span class="badge bg-success">{{ order.financial_status_label }}</span></p>
                </div>
            </div>
            <div class="card mb-2">
                <div class="card-header"><h6 class="p-1 m-0">Shipping Information</h6></div>
                <div class="card-body m-0">
                    <p class="mt-3">Fulfillment status: <span class="badge bg-success">{{ order.fulfillment_status_label }}</span></p>
                    {{ order.shipping_address | format_address }}
                </div>
            </div>
        </div>
        <div class="col-12 col-md-8">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td>Product</td>
                        <td>SKU</td>
                        <td>Price</td>
                        <td>Quantity</td>
                        <td>Total</td>
                    </tr>
                </thead>
                <tbody>
                    {% for line_item in order.line_items %}
                        <tr>
                            <td>{{ line_item.title | link_to: line_item.product.url }}</td>
                            <td>{{ line_item.sku }}</td>
                            <td>{{ line_item.original_price | money }}</td>
                            <td>{{ line_item.quantity }}</td>
                            <td>{{ line_item.line_price | money }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="4"><h6 class="p-1 mb-0">Subtotal</h6></td>
                        <td>{{ order.line_items_subtotal_price | money }}</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>