<div class="container py-5 my-5">
    <div class="login-form">
        {% form 'customer_login' %}
            {% include 'form-error', form: form %}
            <h1 class="h3 mb-4 text-center">Customer Log In</h1>
            <label for="emailAddress">Email Address</label>
            <input type="email" name="customer[email]" class="form-control mb-3">
            <label for="password">Password</label>
            <input type="password" name="customer[password]" class="form-control mb-3">

            <input type="submit" value="Sign In" class="btn btn-primary btn-lg w-100 mb-3">
        {% endform %}
        <a href="#recover" id="forgotPassword" class="text-center">Forgot your password?</a>
    </div>
    <div  id="forgot_password_form" class="forgot-password-form d-none mt-5">
        {% form 'recover_customer_password' %}
         {% include 'form-error', form: form %}
         <div class="col-12">
            <label for="resetPassword" class="form-label">Email Address</label>
            <input type="email" name="email" id="resetPassword" class="form-control">
         </div>

         <input type="submit" value="Reset Password" class="btn btn-secondary mt-3">
        {% endform %}
    </div>
</div>