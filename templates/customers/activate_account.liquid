<div class="container my-5">
    <h1 class="lead text-center m-3 pb-3">Activate Account</h1>
    <div class="activate_account">
        <div class="row">
            {% form 'activate_customer_password' %}
                {% include 'form-error', form %}
                <div class="col-12 mb-4">
                    <label for="activate_password1" class="form-label">Password</label>
                    <input class="form-control" type="password" name="customer[password]" id="activate_password1">
                </div>
                <div class="col-12 mb-4">
                    <label for="activate_password2" class="form-label">Confirm Password</label>
                    <input class="form-control" type="password" name="customer[password_confirmation]" id="activate_password2">
                </div>
                <div class="col-12 mb-2">
                    <button type="submit" class="btn btn-primary w-100">Activate Account</button>
                </div>
                <p class="text-center">or</p>
                <div class="col-12">
                    <input type="submit" name="decline" class="btn btn-secondary w-100" value="Decline Invitation">
                </div>
            {% endform %} 
        </div>
    </div>
</div>
 