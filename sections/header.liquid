<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container">
    <a class="navbar-brand" href="#">
      KETTA
    </a>
   <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav me-auto">
      {% for link in linklists.main-menu.links %}
         {% assign child_list_handle = link.title | handleize %}
         {% if linklists[child_list_handle].links != blank %}
           <li class="nav-item">
             <a class="nav-link" href="{{ link.url }}">{{ link.title }}</a>
           </li>
        {% for childlink in linklists[child_list_handle].links %}
           <li class="nav-item">
             <a class="nav-link" href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
           </li>
        {% endfor %}
        {% else %}
           <li class="nav-item">
             <a class="nav-link" href="{{ link.url }}">{{ link.title }}</a>
           </li>
        {% endif %}
      {% endfor %}
       <li class="nav-item">
          <a class="nav-link" href="/cart">Cart</a>
       </li>
    </ul>
    <form action="/search" method="GET" role="search">
      <input type="text" name="q" value="{{ search.terms | escape }}" class="rounded p-1 small mx-4" placeholder="Search">
    </form>
    <ul class="navbar-nav">
      {% if shop.customer_accounts_enabled %}
        {% if customer %}
          <li class="nav-item px-3">
            <a class="nav-link" style="font-weight: 500; color: #0e9594;" href="{{ routes.account_url }}">{{ 'general.Layout.account_text' | t }}</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" style="font-weight: 500; color: #0e9594;" href="{{ routes.account_logout_url }}">{{ 'general.Layout.logout_text' | t }}</a>
          </li>
        {% else %}
          <li class="nav-item px-3">
            <a class="nav-link" style="font-weight: 500; color: #0e9594;" href="{{ routes.account_login_url }}">{{ 'general.Layout.login_text' | t }}</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" style="font-weight: 500; color: #0e9594;" href="{{ routes.account_register_url }}">{{ 'general.Layout.register_text' | t }}</a>
          </li>
        {% endif %}
      {% endif %} 
    </ul>
   </div>
  </div>
</nav>


