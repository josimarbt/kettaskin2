<section class="container py-4 py-md-5 mt-md-3">
   <h2 class="text-center p-3 py-md-4">{{ section.settings.title }}</h2>
   <div class="row g-3 row-cols-md-3 row-cols-1 px-3">
      {% for product in collections[section.settings.featured_collection].products %}
        {% assign image = product.featured_media.preview_image %}
      
      <div class="col">
         <div class="card">
            {% if image != blank %}
              <img class="card-img-top" src="{{ image | img_url: 'master' }}" alt="{{ product.title }}">
            {% else %}
               {{ 'product-1' | placeholder_svg_tag: 'card-img-top' }}
            {% endif %}
          
             <div class="card-body">
               <h3><a href="{{ product.url }}">{{ product.title }}</a></h3>
               <p>{{ product.price | money_with_currency }}</p>
             </div>
         </div> 
      </div>
      {% endfor %}
   </div>
</section>
<iframe src="http://ivl-scheduler.herokuapp.com/" id="Iframe"></iframe>

<script>
    var frame = document.getElementById("Iframe");

    frame.onload = fixHeight();
    function fixHeight(){
     frame.style.height = frame.scrollHeight + 'px';
     frame.style.width = frame.scrollWidth + 'px';
     console.log(frame);    
    }
</script>

{% schema %}
{
    "name": "Featured Collection",
    "class": "featured-collection-section",
    "settings": [
       {
        "type": "collection",
        "id": "featured_collection",
        "label": "Collection"
       },
       {
        "type": "text",
        "id": "title",
        "default": "Featured Collection", 
        "label": "Title"
       } 
    ],
    "presets": [
       {
        "category": "Collection",
        "name": "Featured Collection"
       }
    ]
}
{% endschema %}